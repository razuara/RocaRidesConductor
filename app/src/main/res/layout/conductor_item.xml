<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@drawable/background2">

        <ImageView
            android:id="@+id/fotoPerfilImageView"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:src="@mipmap/usuario">

        </ImageView>

        <TextView
            android:id="@+id/nombreTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Nombre Conductor"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/fotoPerfilImageView">
        </TextView>

        <TextView
            android:id="@+id/telefonoTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Telefono Conductor"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_toRightOf="@id/fotoPerfilImageView"
            android:layout_below="@id/nombreTextView">
        </TextView>
        <TextView
            android:id="@+id/correoTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Correo Conductor"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_toRightOf="@id/fotoPerfilImageView"
            android:layout_below="@id/telefonoTextView">
        </TextView>
    </RelativeLayout>


</androidx.cardview.widget.CardView>